#include <stdio.h>
#include <locale.h>

int main(void) 
{
int num_1; // переменная типа int для первого целого числа
int num_2; // переменная типа int для второго целого числа
char exit; // переменная типа char для выхода из программы
float result; // результат сложения четных чисел
int i;

setlocale(LC_ALL,"Russian");

do
{
puts("Здравствуй, друг. Тебя приветствует программа для вычисления сложения четных чисел. Введи первое целое число: ");
scanf("%i", &num_1);
puts("Введи второе целое число: ");
scanf("%i", &num_2);
result = num_1 + num_2;
puts("Если хочешь продолжить вычисления, жми 'h'. Если хочешь выйти из программы, жми 'q' "); // действие для выхода из программы 
scanf("%c", &exit);


if((num_1 % 2 == 0) && (num_2 % 2 == 0)) // проверка для четных и нечетных чисел 
{
printf("Результат сложения четных чисел: %i + %i = %f\n", num_1,num_2, result);
}else
{
printf("Ой, ошибка. Вычисление сложения нечетных чисел не реализуется в данной программе!"); // ошибка при вводе хотя бы одного нечетного числа 
}

}while(exit != 'q'); // завершение цикла при вводе 'q'
puts("Завершение программы.. "); 
return 0;
}
