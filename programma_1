#include <stdio.h>
#include <locale.h>

int main(void) 
{
int num_1;
int num_2;
char exit;
float result;
int i;

setlocale(LC_ALL,"Russian");

do
{
puts("Здравствуй, друг. Тебя приветствует программа для вычисления сложения чётных чисел. Введи первое целое число: ");
scanf("%i", &num_1);
puts("Введи второе целое число: ");
scanf("%i", &num_2);
result = num_1 + num_2;
puts("Если хочешь продолжить вычисления, жми 'h'. Если хочешь выйти из программы, жми 'q' ");
scanf("%c", &exit);


if((num_1 % 2 == 0) && (num_2 % 2 == 0)) {
printf("Результат сложения четных чисел: %i + %i = %f\n", num_1,num_2, result);
}else
{
printf("Ой, ошибка. Вычисление сложения нечётных чисел не реализуется в данной программе!");
}

}while(exit != 'q');
puts("Завершение программы.. ");
}
