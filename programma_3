#include <stdio.h>

#include <locale.h>

#include <stdlib.h>


int main(void) {
int mass[10]= {7, 14, 17, 21, 27, 28, 35, 37, 42, 47}; // массив из десяти целых чисел
int indx; // индекс элементов массива, который сдвигается с циклом for
int num; // переменная,которую вводит пользователь
char exit; // переменная для выхода из программы
int max; // переменная для максимального элемента массива
int min; // переменная для минимального элемента массива

setlocale(LC_ALL, "Russian");

int efrt = 0; //переменная для выхода после трёх неверных ответов
  do
  {
   max = mass[0];
   for(indx = 1; indx<10; indx++) // цикл for для поиска максимального элемента массива
	  if (mass[indx] > max){
	  max = mass[indx];
	  }
   min=mass[0];
   for(indx = 1; indx<10; indx++) //цикл for для поиска минимального значения массива
   if(mass[indx] < min){
   min=mass[indx];
   }
  printf("Предлагаю тебе угадывать числа. Мой массив содержит десять целых чисел, которых объединяет одна отличительная черта.\n Минимальный элемент массива - %i; максимальный элемент массива - %i. Твоя задача: угадать хотя бы одно из оставшихся восьми чисел.\n",min,max);
  puts("Помни, у тебя всего три попытки :");
  scanf("%i", &num);
  int flag = 0; // флаг для определения,что условие "введённое пользователем число равно одному из элементов массива" верное или неверное
      for (indx = 0; indx < 10; indx++) { //цикл для перебора элементов массива
        if (mass[indx] == num) { // условие, при котором выводится индекс элемента
	    printf("Получилось! В массиве есть такой элемент. Его индекс: mass[%d]\n", indx);
	    flag = 1; // изменение флага в случае, если условие верное
        }
      }
      if(flag != 1) // проверка, верное ли условие
      {
      printf("Увы, такого числа нет в массиве. Уверена, в следующий раз получится.\n");
      efrt++;
      }
      puts("P.s. Если хочешь выйти из программы, жми 'q' \n"); // действие для выхода из программы
      scanf("%c", &exit);
    }while((efrt != 3)&&(exit != 'q'));
    puts("Завершение программы.. ");
    return 0;
  }
